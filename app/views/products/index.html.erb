<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Stock quantity</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.stock_quantity %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>

<p>
  Average price of products: <%= @products.pluck(:price).reduce(:+) / @products.size %> 
</p>

<p>
  The maximum price of any product: <%= @products.pluck(:price).max %>
</p>

<p>
  The total number of unique products: <%= @products.distinct.pluck(:title).count %>
</p>

<p>
  Total stock quantity of all items: <%= @products.pluck(:stock_quantity).reduce(:+) %>
</p>

<p>
  <% 100.times.each do |i| %>
    <%= "Chunky Bacon" %><br>
  <% end %>
</p>
